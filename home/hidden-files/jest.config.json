{
	"collectCoverage": false,
	"collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}", "!src/main.ts", "!**/node_modules/**"],
	"moduleFileExtensions": ["ts", "tsx", "js", "json", "vue"],
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/src/$1"
	},
	"testEnvironment": "jsdom",
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"transform": {
		"^.+\\.(ts|tsx)$": "ts-jest",
		"^.+\\.vue$": "@vue/vue2-jest"
	}
}
